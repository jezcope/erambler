- n = @config[:page_size]
- sorted_articles.drop(@page*n).take(n).each do |article|
  %article
    %h2.post-title= link_to article[:title], article
    .row
      .post-info= render 'partials/post_info', :item => article
      .post-body
        .post-content= article.compiled_content :rep => :archive
        .post-comments-link= disqus_comments_link article
#page-nav
  - unless @page == 0
    = link_to '<< Newer posts', archive_page_url(@page - 1)
  - unless (@page+1) * n >= articles.count
    = link_to 'Older posts >>', archive_page_url(@page + 1)
